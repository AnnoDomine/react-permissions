{
    "name": "root",
    "version": "0.1.0",
    "description": "Full configurable permission system for react web apps",
    "main": "index.js",
    "directories": {
        "example": "example"
    },
    "scripts": {
        "build": "lerna run build --scope react-permission",
        "watch": "lerna run watch --scope react-permission",
        "package": "lerna exec --scope react-permission -- npm pack",
        "linkit": "npx lerna add react-permission --scope example"
    },
    "workspaces": [
        "examples/*",
        "packages/*"
    ],
    "devDependencies": {
        "lerna": "^6.4.1",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "private": true,
    "author": "Dominic Seel",
    "license": "MIT"
}
