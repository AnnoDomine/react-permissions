{
    "compilerOptions": {
        "target": "ES5",
        "module": "esnext",
        "lib": ["ESNext"],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "types",
        "emitDeclarationOnly": true
    },
    "exclude": ["node_modules", "./dist", "./packages", "./examples"]
}
